<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/back2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/current_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="  0  "
            android:textSize="15sp"
            bootstrapbutton:bb_icon_left="fa-dot-circle-o"
            bootstrapbutton:bb_icon_right="fa-dot-circle-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="default" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:text="Question"
            android:textSize="30sp"
            bootstrapbutton:bb_icon_right="fa-question"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="warning" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/choice_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="answerClick"
            android:tag="0"
            android:text=" answer = 0 "
            android:textSize="20sp"
            bootstrapbutton:bb_icon_left="fa-hand-o-right"
            bootstrapbutton:bb_icon_right="fa-hand-o-left"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="primary" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/choice_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="answerClick"
            android:tag="1"
            android:text=" answer = 1 "
            android:textSize="20sp"
            bootstrapbutton:bb_icon_left="fa-hand-o-right"
            bootstrapbutton:bb_icon_right="fa-hand-o-left"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="primary" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/choice_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="answerClick"
            android:tag="2"
            android:text=" answer = 2 "
            android:textSize="20sp"
            bootstrapbutton:bb_icon_left="fa-hand-o-right"
            bootstrapbutton:bb_icon_right="fa-hand-o-left"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="primary" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/choice_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="answerClick"
            android:tag="3"
            android:text=" answer = 3 "
            android:textSize="20sp"
            bootstrapbutton:bb_icon_left="fa-hand-o-right"
            bootstrapbutton:bb_icon_right="fa-hand-o-left"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="primary" />

    </LinearLayout>


</FrameLayout>